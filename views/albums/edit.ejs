<% include ../partials/header %>
	<h1>Edit Album</h1>
	<form enctype="multipart/form-data" method="post" action="/albums/edit/<%= id %>">
		<div class="form-group">
			<label>Artist</label>
			<input type="text" class ="form-control" name="artist" placeholder="Artist Name" value="<%= album.artist %>">
		</div>
		<div class="form-group">
			<label>Album Title</label>
			<input type="text" class="form-control" name="title" placeholder="Album Title" value="<%= album.title %>">
		</div>
		<div class="form-group">
			<label>Genre</label>
			<select name="genre" class="form-control">
				<% for(var i=0; i<genres.length; i++) {%>
					<option value="<%= genres[i].name %>" <% if(album.genre == genres[i].name) { %> selected <% } %>>
						<%= genres[i].name %>
					</option>
					<% } %>
			</select>
		</div>
		<div class="form-group">
			<label>Album Info</label>
			<textarea class="form-control" name="info" placeholder="Album Info"><%= album.info %></textarea>
		</div>
		<div class="form-group">
			<label>Release Year</label>
			<input type="text" name="year" class="form-control" value="<%= album.year %>">
		</div>
		<div class="form-group">
			<label>Record Label</label>
			<input type="text" name="label" class="form-control" value="<%= album.label %>">
		</div>
		<div class="form-group">
			<label>Number Of Tracks</label>
			<input type="number" name="tracks" class="form-control" value="<%= album.tracks %>">
		</div>
		<div class="form-group">
			<label>Album Cover</label>
			<input type="file" name="cover" class="form-control">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
		<a href="/albums" class="btn btn-danger">Close</a>
	</form>
<% include ../partials/footer %>